{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["es2021"],
    "target": "ES2022",

    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "types": ["node"],
    "useUnknownInCatchVariables": false
  }
}
